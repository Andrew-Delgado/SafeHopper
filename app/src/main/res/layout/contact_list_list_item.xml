<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/contact_list_parent_layout"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/contact_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Guillermo Barron"
        android:textColor="#FFF"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/phone_number_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_name_textview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp"
        android:text="Phone: (999)999-9999"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/email_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number_textview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp"
        android:text="Email: thisemail@google.com"
        android:textColor="#FFF" />

    <CheckBox
        android:id="@+id/email_checkbox"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="276dp"
        android:layout_marginLeft="118dp"
        android:layout_marginEnd="32dp"
        android:layout_toRightOf="@id/contact_name_textview"
        android:text="Email"
        android:textColor="#FFF" />

    <CheckBox
        android:id="@+id/text_message_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_checkbox"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="46dp"
        android:text="Text"
        android:textColor="#FFF" />

</RelativeLayout>